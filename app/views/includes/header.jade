.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navigation')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') WEiko
    #navigation.navbar-collapse.collapse
      ul.nav.navbar-nav
        //li(class=isActive('/nodos/new') ? 'active' : '')
        //  a(href="/nodos/new", title="new nodo") New
        li
          a(href="/nodos", title="nodos/index") Nodo List
        li
          a(href="/courses", title="courses/index") Courses
        li(class="dropdown")
          a(href="#", data-toggle="dropdown") Dashboard
          ul(class="dropdown-menu",role="menu")
            li(class=isActive('/dashboard/index') ? 'active' : '')
              a(href="/dashboard/index", title="dashboard/index") Memember

            li(class=isActive('/dashboard/users/list') ? 'active' : '')
              a(href="/dashboard/users/list", title="Users list") Users List

            li(class=isActive('/dashboard/admin') ? 'active' : '')
              a(href="/dashboard/admin", title="dashboard/admin") Admin
        li
          a(href="/demo") Demo
      ul.nav.navbar-nav.pull-right
        - if (req.isAuthenticated())
          li
            a(href="/users/"+req.user.id, title="Profile") Profile
          li
            a(href="/logout", title="logout") Logout
        - else
          li(class=isActive('/login') ? 'active' : '')
            a(href="/login", title="Login") Login
          li(class=isActive('/signup') ? 'active' : '')
            a(href="/signup", title="Signup") Signup
