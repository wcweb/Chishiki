head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title= pkg.name + ' - ' + title
  meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
  meta(name="keywords", content=pkg.keywords.join(","))
  meta(name="description", content=pkg.description)


  //
     Styles
  // production: jquery{!'.'+min}.js
  link(rel="stylesheet", href="/jquery.tagsinput/jquery.tagsinput.css")

  script(src='/jquery/jquery.js')

  link(href="/chosen/chosen.css", rel="stylesheet")

  - if( env !== 'production')
    link(rel="stylesheet", href="/stylesheets/app.css")
    link(href="/stylesheets/font-awesome.css", rel="stylesheet")
    link(href="/stylesheets/font-awesome-ie7.css", rel="stylesheet")
  - else
    link(rel="stylesheet", href="/stylesheets/application.min.css")


  block styles
  //
     HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
  //if lt IE 9
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')

  script.
    var domain = {
      "host" : '!{req.headers.host}',
      "path" : 'http://!{req.headers.host}/'
    };

