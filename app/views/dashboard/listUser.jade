extends ../layouts/default
block main
  h1= title
  p this should be in admin or member.


block content
  - if (users.length)
    - each user in users
      .user
        h3
          - var name = user.name ? user.name : user.username

            a(href="/users/"+user._id, title=user.name)= name
        p= user.email



        - if (user.articles.length)
          ul
            - each article in user.articles
              li
                a(href="/articles/"+article._id, title=article.name) #{article.title}
                p= article.body
                .meta
                  span.muted= formatDate(article.createdAt)

                - if (article.user.tags)
                  | &nbsp; - &nbsp;
                  span Tags &nbsp;
                  - each tag in article.user.tags.split(',')
                    i.muted.fa.fa-tag &nbsp;
                    a.tag(href="/tags/"+tag)= tag
                    | &nbsp;&nbsp;

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page)
  - else
    h4.muted No users.&nbsp;
      a(href="/users/new") create one
