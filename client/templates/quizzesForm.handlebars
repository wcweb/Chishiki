<div id="quizzes-groups">
    <div class=" alert alert-info" id="quizMsg" style="display:none;">
        <button type="button" data-dismiss="alert" class="close">×</button>
        <ul>
            <li>Quiz Added!</li>
        </ul>
    </div>
  {{#each form.quizzes }}

    <div class="quiz-group" data-target="{{setIndex @index}}">
      <div class="">
          <ul class="nav nav-pills group-nav" id="quizzes-groups-nav">
            {{#each quiz.questions }}
                <li  class="{{#if isActive }}active{{/if}}" id="group-nav-{{@index}}">
                    <a data-toggle="tab" href="#group-pane-{{ ../oindex }}-{{@index}}" title="{{question}}">{{setIndex @index}}</a>
                </li>
            {{/each}}
              <li class=" pull-right">
                  <button id="add" data-target="#quizzes-groups-nav" data-action="add"
                          class="btn btn-primary group-pane-add-btn">Add Question</button>
              </li>
          </ul>
      </div>
      <div class="tab-content group-wrapper" id="quizzes-group-0">



        {{#each quiz.questions }}
            <div class="tab-pane {{#if isActive }}active{{/if}} group-pane" id="group-pane-{{ ../oindex }}-{{@index}}">
                <div class="">
                    <div class="form-group">
                        <label for="title" class="col-sm-2 control-label">Question:</label>

                        <div class="col-sm-1 col-sm-offset-9">
                            <button type="button" data-target="#group-pane-{{ ../oindex }}-{{@index}}" data-action="remove"
                                    class="close group-pane-remove-btn">×</button>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-11 col-sm-offset-1">

                            <textarea rows="3" name="quizzes[{{@index}}][question]"
                                      placeholder="Enter the Question title" class="form-control">{{{ question }}}
                            </textarea>
                        </div>
                    </div>
                    <div class="options-group col-sm-offset-1" id="options-group-pane-sub-{{ ../oindex }}-{{@index}}-wrapper">

                       {{#each answers}}
                          <div class="option-group group-pane-sub" id="group-pane-sub-{{ ../oindex }}-{{@index}}">
                              <div class="form-group">
                                  <label for="option" class="col-sm-2 control-label">Option :</label>

                                  <div class="col-sm-9">
                                      <input type="text" name="quizzes[{{../oindex}}][answers][{{@index}}][option]"
                                             value="{{option}}"
                                             placeholder="Enter option title" class="form-control">
                                  </div>
                                  <div class="col-sm-1">
                                      <button type="button" data-target="#group-pane-sub-{{../oindex}}-{{@index}}"
                                              data-action="remove" class="close group-pane-sub-remove-btn">×</button>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <div class="col-sm-9 col-sm-offset-2">
                                      <input type="checkbox" name="quizzes[{{ ../oindex }}][answers][{{@index}}][correct]"
                                             placeholder="Correct ? "
                                        {{#if correct }} checked {{/if}} >
                                      <label for="correctBool" class="control-label">Correct ?</label>
                                  </div>
                              </div>
                          </div>
                       {{/each}}

                    </div>
                    <div class="form-group crud-option-control">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button data-target="#group-pane-{{../oindex }}-{{@index}}-0"  data-action="add"
                                    class="btn btn-info pull-right group-pane-sub-add-btn">
                                add an option
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="correct" class="col-sm-3 control-label">Correct</label>

                        <div class="col-sm-9">
                            <textarea rows="2" name="quizzes[{{@index}}][correct]"
                                      placeholder="If Correct : " class="form-control">{{ correct }}
                            </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="incorrect" class="col-sm-3 control-label">Incorrect</label>

                        <div class="col-sm-9">
                            <textarea rows="2" name="quizzes[{{@index}}][incorrect]"
                                      placeholder="If incorrect : " class="form-control">{{ incorrect }}
                            </textarea>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

      </div>

    </div>
  {{/each}}
</div>

<div class="form-group crud-quiz-control">

    <div class="col-sm-10">
        <hr/>

        <button type="submit" class="btn btn-primary">{{ form.actionName }}</button>
        &nbsp;<a href="/articles" title="cancel" class="btn">Cancel</a>

    </div>
</div>